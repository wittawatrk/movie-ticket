generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id           String        @id @default(uuid())
  displayName  String?       @map("display_name") // Optional field, mapped to "display_name"
  username     String        @unique
  createdAt    DateTime      @default(now()) @map("created_at") // Defaults to the current timestamp
  createdBy    Int?          @map("created_by") // Optional foreign key reference
  updatedAt    DateTime      @default(now()) @map("updated_at") // Defaults to the current timestamp
  updatedBy    Int?          @map("updated_by") // Optional foreign key reference
  deletedAt    DateTime?     @map("deleted_at") // Optional field
  deletedBy    Int?          @map("deleted_by") // Optional foreign key reference
  role         UserRole      @default(USER) @map("role")
  isActive     Boolean       @default(true) @map("is_active")
  reservations Reservation[]
  UserSecret   UserSecret[]

  @@map("user")
}

model UserSecret {
  id        Int     @id @default(autoincrement()) // Primary key with auto-increment
  userId    String? @unique @map("user_id") // Optional foreign key referencing the "user" table
  hPassword String  @map("h_password") // Hashed password, non-nullable

  // Relationships
  user User? @relation(fields: [userId], references: [id]) // References the "User" table

  @@map("user_secret")
}

model Concert {
  id            String        @id @default(uuid())
  name          String
  description   String
  totalSeats    Int
  reservedSeats Int           @default(0)
  reservations  Reservation[]
  createdAt     DateTime      @default(now())
}

model Reservation {
  id          String            @id @default(uuid())
  userId      String
  concertId   String
  status      ReservationStatus @default(RESERVED)
  createdAt   DateTime          @default(now())
  cancelledAt DateTime?

  user    User    @relation(fields: [userId], references: [id])
  concert Concert @relation(fields: [concertId], references: [id])
}

enum ReservationStatus {
  RESERVED
  CANCELLED
}
